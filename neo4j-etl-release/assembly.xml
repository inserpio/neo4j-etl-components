<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>release</id>
    <fileSets>
        <fileSet>
            <directory>${project.parent.parent.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.parent.basedir}/neo4j-etl-cli/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>neo4j-etl.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.parent.basedir}/neo4j-etl-ui/target/ui</directory>
            <outputDirectory>ui</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.parent.basedir}/docs</directory>
            <outputDirectory>docs</outputDirectory>
            <includes>
                <include>index.html</include>
                <include>*.png</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>